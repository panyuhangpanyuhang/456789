@using Online.Infrastructure.MyCourse;
@model Student
@{
    var student = Model;
}
<!DOCTYPE html>
<html>

<head>
    <title>用户添加</title>
</head>

<body class="login-img3-body">
    <section class="wrapper">
        <div class="text-center">
            <h1 class="display-4">用户明细信息页面</h1>
        </div>
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    用户信息
                </header>
                <div class="panel-body">
                    <div class="form">
                        <form id="formSearch" class="form-validate form-horizontal" method="get" action="@Url.Action("UpdateUser","Student")" novalidate="novalidate">
                            <div class="form-group ">
                                <label for="uid" class="control-label col-lg-2">用户Id <span class="required">*</span></label>
                                <div class="col-lg-10">
                                    <input class="form-control" value="@student.Sid" minlength="5" type="text" required="" disabled />
                                    <input id="sid" value="@student.Sid" name="sid" type="hidden" />
                                </div>
                            </div>
                            <div class="form-group ">
                                <label for="uname" class="control-label col-lg-2">用户名称 <span class="required">*</span></label>
                                <div class="col-lg-10">
                                    <input class="form-control" id="sname" value="@student.Sname" name="sname" minlength="5" type="text" required="">
                                </div>
                            </div>
                            <div class="form-group ">
                                <label for="uname" class="control-label col-lg-2">学院 <span class="required">*</span></label>
                                <div class="col-lg-10">
                                    <input class="form-control" id="depart" value="@student.Depart" name="depart" minlength="5" type="text" required="">
                                </div>
                            </div>
                            <div class="form-group ">
                                <label for="uname" class="control-label col-lg-2">班级 <span class="required">*</span></label>
                                <div class="col-lg-10">
                                    <input class="form-control" id="Class" value="@student.Class" name="Class" minlength="5" type="text" required="">
                                </div>
                            </div>
                            <div class="form-group ">
                                <label for="uname" class="control-label col-lg-2">专业 <span class="required">*</span></label>
                                <div class="col-lg-10">
                                    <input class="form-control" id="major" value="@student.Major" name="major" minlength="5" type="text" required="">
                                </div>
                            </div>
                            <div class="form-group ">
                                <label for="uname" class="control-label col-lg-2">密码 <span class="required">*</span></label>
                                <div class="col-lg-10">
                                    <input class="form-control" id="password" value="@student.Password" name="password" minlength="5" type="text" required="">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-offset-2 col-lg-10">
                                    <button class="btn btn-primary" type="submit" onclick="change()">Save</button>
                                    <button class="btn btn-default" type="button">Cancel</button>
                                </div>
                            </div>
                        </form>
                    </div>

                </div>
            </section>
        </div>
    </section>
    <script type="text/javascript">
        @*function change(uid) {
            var url =@Url.Action("Detail", "User")+'?uid=' + uid;
            location.href = url;
        }*@
        function change() {
            var form = document.getElementById("formSearch");
            form.submit();
        }
    </script>
</body>
</html>
